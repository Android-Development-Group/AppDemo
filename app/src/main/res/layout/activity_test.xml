<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_default"
    tools:context="com.myself.appdemo.demo.TestActivity">

    <com.myself.mylibrary.view.NavigationBar
        style="@style/style_navigation_bar"
        app:nav_divider_color="@color/divider_color"
        app:nav_has_divider="true"
        app:nav_left_icon="@drawable/back_selector"
        app:nav_main_title="Test"/>

    <TextView
        android:id="@+id/tv_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/distance_20dp"
        android:text=""/>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_path"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/distance_20dp"
        android:text=""/>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/distance_20dp"
        android:textAllCaps="false"/>


</RelativeLayout>
